{
  "manifest_version": 3,
  "name": "LexoFin Extension",
  "description": "Get a summary of news articles using the chatGpt api",
  "version": "1.0",
  "host_permissions": ["activeTab"],
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "script-src 'self' https://api.openai.com; object-src 'self'"
  }
}
